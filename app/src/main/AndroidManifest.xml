<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ptuk.coder.loginform">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/relative"
        android:label=""
        android:roundIcon="@drawable/relative"
        android:supportsRtl="true"
        android:theme="@style/Theme.LoginForm.NoActionBar"
        android:usesCleartextTraffic="true"
        >
        <activity android:name=".EditUser"></activity>
        <activity android:name=".SelectedUser" />
        <activity
            android:name="Controller.Foodlist"
            android:label="@string/title_activity_order_managment"
            android:theme="@style/Theme.LoginForm.NoActionBar" />
        <activity
            android:name=".FoodListMain"
            android:theme="@style/Theme.LoginForm.NoActionBar" />
        <activity
            android:name="Views.AdminPages.AllCoustemer"
       />
        <activity
            android:name="Views.AdminPages.AllAdmin"
        />
        <activity
            android:name="Views.AdminPages.AllUsers"
            android:windowSoftInputMode="adjustPan"
           />
        <activity
            android:name="Views.AdminPages.AddNewUser"
            android:windowSoftInputMode="adjustPan"
            />
        <activity android:name="Views.AdminPages.AdminPage" />
        <activity android:name=".Createaccount" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>